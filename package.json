{
  "name": "Valence",
  "productName": "Valence",
  "version": "0.1.1-alpha",
  "description": "Valence is a simple GUI application for converting video files",
  "main": "src/App.ts",
  "scripts": {
    "start": "npm-run-all --sequential build electron",
    "bump": "npm run bump:patch",
    "bump:patch": "node scripts/version.js -p",
    "bump:minor": "node scripts/version.js -i",
    "bump:major": "node scripts/version.js -m",
    "electron": "cross-env NODE_ENV=dev electron .",
    "pug": "node scripts/pug.js",
    "pug:watch": "node scripts/pug.js --watch",
    "sass": "sass ./src/css/index.scss ./css/Index.css",
    "sass:watch": "node scripts/sass.js",
    "ts": "tsc",
    "clean": "rm -rf dist/",
    "build": "npm-run-all --sequential clean build:all",
    "build:all": "npm-run-all --parallel ts pug sass",
    "package:win": "npm-run-all --sequential build && electron-packager ./ --out=out/ --overwrite --icon=./icons/CustomIcon.ico",
    "package:mac": "npm-run-all --sequential build && electron-packager . \"ElectronTS\" --platform=darwin --app-bundle-id=\"com.mycompany.myappname\" --app-version=\"$(node scripts/version.js --get)\" --arch=x64 --osx-sign --out=out/ --overwrite --icon=./icons/CustomIcon.icns",
    "zip:win": "node scripts/zip.js",
    "zip:mac": "node scripts/zip.js --platform=darwin --arch=x64",
    "release:win": "npm run package:win && npm run zip:win",
    "release:mac": "npm run package:mac && npm run zip:mac"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/ValenceEncoder/Valence.git"
  },
  "keywords": [
    "mkv",
    "converter",
    "appletv",
    "apple-tv",
    "mp4",
    "ffmpeg",
    "handbrake",
    "video"
  ],
  "author": "Liam Whan",
  "license": "MIT",
  "devDependencies": {
    "@types/bootstrap": "^4.1.1",
    "@types/callsite": "^1.0.30",
    "@types/jquery": "^3.3.4",
    "@types/lodash.clonedeep": "^4.5.3",
    "@types/lodash.merge": "^4.6.3",
    "@types/pug": "^2.0.4",
    "archiver": "^2.1.1",
    "command-line-args": "^5.0.2",
    "cross-env": "^5.2.0",
    "crypto-js": "^3.1.9-1",
    "electron": "^2.0.3",
    "electron-packager": "^12.1.0",
    "npm-run-all": "^4.1.3",
    "pug": "^2.0.3",
    "tslint": "^5.10.0",
    "tslint-consistent-codestyle": "^1.13.0",
    "typescript": "^2.9.2",
    "uglifycss": "0.0.29"
  },
  "dependencies": {
    "beload": "git+https://github.com/hammus/beload.git",
    "bootstrap": "^4.1.1",
    "callsite": "^1.0.0",
    "colours-ts": "git+https://github.com/hammus/colours-ts.git",
    "decimal.js": "^10.0.1",
    "electron-log": "git+https://github.com/hammus/electron-log.git",
    "jquery": "^3.3.1",
    "lodash.clonedeep": "^4.5.0",
    "lodash.merge": "^4.6.1",
    "popper.js": "^1.14.3"
  }
}
