{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "dist/lib",
        "target": "esnext",
        "removeComments": true,
        "moduleResolution": "node",
        "allowJs": true,
        "experimentalDecorators": true
    },
    "compileOnSave": false,
    "include": [
        "src/lib/**/*"
    ],
    "exclude": [
        "node_modules",
        "test",
        "icons",
        "ffmpeg",
        "dist"
    ]
}